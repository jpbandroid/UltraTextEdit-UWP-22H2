<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="ChangelogText" TextWrapping="WrapWholeWords">
            <LineBreak />
            • Updates dependencies<LineBreak />
            • Updates WinUI to v2.8.4<LineBreak />
            • This release revamps the color picker UI based on TextPad's new color picker
        </TextBlock>
    </Grid>
</ContentDialog>