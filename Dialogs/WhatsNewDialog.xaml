<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock x:Name="version" Text="UltraTextEdit UWP 11.0.7746.1 - Canary Channel"/>
        <TextBlock x:Name="ChangelogText" TextWrapping="WrapWholeWords">
            <LineBreak/>• Add feature when open saved document will display as the file name, instead of Document {number}<LineBreak />
            
        </TextBlock>
    </StackPanel>
</ContentDialog>