<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="ChangelogText">
            <LineBreak />
            • Adds a brand new First Run dialog!<LineBreak />
            • Adds a What's New dialog<LineBreak />
            • Removes Gaming theme (it looked so horrible and was underused)</TextBlock>
    </Grid>
</ContentDialog>