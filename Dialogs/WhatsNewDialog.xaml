<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="ChangelogText" TextWrapping="WrapWholeWords">
            <LineBreak />
            • Adds Tuurkish translation (by @AlperAkca49)!<LineBreak />
            • Improvements to the Simplified Chinese translation (by @wxcu21)<LineBreak />
            • Fix to ensure that this build can be installed on Windows 10 1809, 1903, 1909
        </TextBlock>
    </Grid>
</ContentDialog>