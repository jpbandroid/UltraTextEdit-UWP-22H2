<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="ChangelogText" TextWrapping="WrapWholeWords">
            • The app now uses Mica as the backdrop on Windows 10 as well! (although it's a different style of Mica than the one observed when using the app on Windows 11)<LineBreak/>
            • Dependency updates<LineBreak/>
        </TextBlock>
    </Grid>
</ContentDialog>