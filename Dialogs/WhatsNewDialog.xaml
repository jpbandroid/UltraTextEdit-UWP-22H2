<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d"
    CornerRadius="8"
Style="{StaticResource PivotTitleContentControlStyle}">

    <Grid>
        <TextBlock x:Name="ChangelogText" TextWrapping="WrapWholeWords">
            <LineBreak />
            • Initial release of UTE UWP, version 24H1<LineBreak />
            • Introduce some small visual updates to dialogs<LineBreak />
            • Dependency updates<LineBreak />
            • Update app dates to 2024, HAPPY NEW YEAR!!<LineBreak />
        </TextBlock>
    </Grid>
</ContentDialog>