<ContentDialog
    x:Class="UltraTextEdit_UWP.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="OK"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    Title="What's new"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="ChangelogText" TextWrapping="WrapWholeWords">
            • Updates Win2D.uwp to version 1.27.0-preview3<LineBreak />
            • Updates Microsoft.NETCore.Platforms and System.Text.Json to version 7.0.3<LineBreak />
            • Updates Microsoft.Web.WebView2 to version 1.0.1823.32
        </TextBlock>
    </Grid>
</ContentDialog>